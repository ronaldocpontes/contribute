}



#projectPreview {
	background:{
		image: url(project_preview_divider.png), url(projects_background.png);
		repeat: no-repeat;
		position: bottom;
	}
	margin: {
		top: 200px;
		left: 150px;
	}
	padding: 10px;
	border: {
		width: 0px;
		style: solid;
		color: #999;
		radius: 10px;
	}
