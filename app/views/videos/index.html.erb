<% @videos.each do |video| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= video.id %>
          </td>
                    <td>
            <%= link_to video.title, video_path(video) %>
          </td>
                    <td>
            <%= video.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", video_path(video) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_video_path(video) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", video_path(video), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>