<div class="thumbnail-small">
    <%= link_to project do %>
      <% if project.picture? %>
	    <%= image_tag project.picture.url(:thumb), :width => '171' %>
	  <% else %>
	    <%= image_tag "BlockSThumb.png", :width => '171' %>
	  <% end %>
	<% end %>
      <h4 class="ellipsisName"><%= link_to project.name, project %></h4>
      <p class="byline">by <%= link_to project.user.name, project.user %></p>
      <%= link_to "Remove project", remove_project_from_group_path(@group, project), :confirm => "Are you sure you want to remove this project from the group?", :class => 'btn btn-mini btn-danger' if @group.admin_user_id == @current_user.id %>
    </div>
