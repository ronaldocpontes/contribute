<div di ="projectContent">

<% if can? :update, @project %>
	<div id="editLink">
		<%= link_to "Edit this project", edit_project_url(@project) %>
  </div>
<% end %>

<% if can? :contribute, @project %>
	<div id="editLink">
		<%= link_to "Contribute", new_contribution_url(@project) %>
	</div>
<% elsif can? :edit_contribution, @project %>
	<div id="editLink">
		<%= link_to "Edit Contribution", edit_contribution_url(Contribution.find_by_user_id(current_user.id)) %>
	</div>
<% end %>

	<div id ="projectHead" align="center">
	<h1><%= @project.name %></h1>
	<h2><%= @project.user.location %> </h2>
	<h3>By: <%= @project.user.name %> </h3>

	<ul>
		<li>End Date: <%= @project.end_date %></li>
		<li>Category: <%= Category.find(@project.category_id).short_description %></li>
		<li>Contributed: <%= number_to_currency(@project.contributions_total, :precision => 0) %></li>
		<li>Funding Goal: <%= number_to_currency(@project.funding_goal, :precision => 0) %></li>
	</ul>
	</div>

	<div id="projectContent" align="center">
	<% if @project.picture? %>
		<%= image_tag @project.picture.url(:show), :class => "projectImage" %><br>
	<% else %>
		<%= image_tag "BlockSShow.png", :class => "projectImage" %>
	<% end %>
	<br>
	Description:<br>
	<%= @project.long_description %><br>

<%= link_to "Back", projects_url %>

</div>

<h3> Contributors </h3>
<ul class="projectContributors">
<% @project.contributions.each do |contribution|%>
	<% unless contribution.user.nil? %>
		<li><%= link_to contribution.user.name , contribution.user %>
	<% else %>
		<li>Anonymous
	<% end %>

	<% if can? :update, @project %>
		- <%= number_to_currency(contribution.amount, :precision => 0) %>
	<% elsif can? :update, contribution %>
		- <%= number_to_currency(contribution.amount, :precision => 0) %> <%= link_to "Edit", edit_contribution_url(contribution) %>
	<% end %>
	
	</li><br/>
<% end %>
</ul>

