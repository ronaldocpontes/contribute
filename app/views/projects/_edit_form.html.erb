<%= form_for(@project, :html => {:multipart => true}) do |f| %>

<div id="form">

	<% if @project.errors.any? %>
		<div id="error_explanation">
		<h2><%= pluralize(@project.errors.count, "error") %> prevented this project from being saved:</h2>
		<ul>
		<% @project.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
		</div>
	<% end %>

<p>Name: <%= f.text_field :name  %></p>
<p><%= render :partial => "picture", :locals => {:f => f} %></p>
<p>Category: <%= f.collection_select :category_id, Category.all, :id, :short_description %></p>
 
<p>Short Description:<br>
	 <%= f.text_field :short_description%></p>

<p>Long Description:<br>
	<%= f.text_area :long_description, :size => "40x10" %></p>
<%= f.submit %>
</div>
<% end %>
