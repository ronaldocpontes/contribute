<%= form_for(@project) do |f| %>
	<% if @project.errors.any? %>
		<div id="error_explanation">
		<h2><%= pluralize(@project.errors.count, "error") %> prevented this project from being saved:</h2>
		<ul>
		<% @project.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
		</div>
	<% end %>
Name: <%= f.text_field :name  %><br>
Short Desc: <%= f.text_field :short_description %><br>
Long Desc:<br>
<%= f.text_area :long_description, :size => "40x10" %><br>
End Date: <%= f.text_field :end_date, :size => 10, :id => "DatePickerEndDate", :value => @project.end_date.blank? ? '' : format_date(@project.end_date) %> <br>
Category: <%= f.collection_select :category_id, Category.all, :id, :short_description %><br>
Picture: (optional) <%= f.file_field :picture %> <br>
Funding Goal: $<%= f.text_field :funding_goal, :size => 10 %><br>
<%= f.submit %>
<% end %>
