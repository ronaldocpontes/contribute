<div class="group-header">
<h1><%= @group.name %></h1>
<blockquote><%= @group.description %></blockquote>
<div class="row">
  <div class="span7">
    <%= image_tag @group.picture.url(:show), :class => "groupImage" if @group.picture? %>
  </div>
  <div class="span2">
	  <%= link_to "Submit a project", new_add_path(@group), :class => 'btn' %><br>
	  <%= link_to "Admin", group_admin_path(@group) %>
  </div>
</div>
</div>

<div class="row group-tiles">
  <ul class="thumbnails-small">
    <% @group.projects.each do |project| %>
      <li class="project-span">
        <%= render :partial => 'shared/project-small', :locals => { :project => project } %><br>
      </li>  
    <% end %>
  </ul>
</div>

<div class="row">
	<div class="span12">
	</div>
</div>