<div id="header">
	Browse Groups.<br>
	<%= link_to "New Group", new_group_path, :class => 'btn' %>
</div>
 
<% @groups.each do |group| %>
	<div class="group-container">
	  <%= link_to group.name, group %><br>
	  <%= image_tag group.picture.url(:thumb) if group.picture? %>
	</div>
<% end %>

<p>&nbsp;</p>