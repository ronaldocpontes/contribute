<div id="sign_in">
  <h2>Sign in</h2><br/>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div><%= f.label :email %>
    <%= f.email_field :email, :placeholder => "Email Address" %></div>

    <div><%= f.label :password %>
    <%= f.password_field :password, :placeholder => "Password" %></div>

    <% if devise_mapping.rememberable? -%>
      <div id="check_box"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Sign in" %></div>
  <% end %>

  <p><%= link_to "Forgot your password?", new_user_password_path %><br/><p>
  <p><%= link_to "Resend confirmation email", new_confirmation_path(resource_name) %></p>
  <p><%= link_to "Don't have an account yet? Sign up!", new_user_registration_path %></p>
</div>
